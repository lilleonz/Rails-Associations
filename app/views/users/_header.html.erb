<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
  <%= link_to "Get you event on!", root_path, id: "logo" %>
  <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Home", root_path %></li>
        <% if signed_in? %>
          <li><%= link_to "#{current_user.name}'s Events", current_user %></li>
          <li><%= link_to "Events", user_path(current_user) %></li>
          <li><%= link_to "Log out", signout_path, method: :delete %></li>
          <li><%= link_to 'Create a new event', newpost_path %></li>
        <% else %>
          <li><%= link_to "Users", users_path %></li>
          <li><%= link_to "Sign up", signup_path %></li>
          <li><%= link_to "Log in", login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>